<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="student_attendacne_ids">
			<field name="name">student attendance</field>
			<field name="model">student.attendance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="administrator">
				 <header>
                        <button string="Confirm" name="do_confirm" type="object"
                            states="draft" />
                        <button string="Done" name="do_done" type="object" states="confirm" />
                        <button string="Cancel" name="do_cancel" type="object"
                            states="confirm" />
                        <button string="Reset" name="do_reset" type="object"
                            states="cancel" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" />
                    </header>
					<sheet>
						<group col="4">
							<field name="name" />
							<field name="attendance" />		
							<field name="date"></field>
							<field name="enrolment_number" />
							<field name="present"/>
							<field name="absent" />
							<field name="std"/>
							<field name="n_absent" attrs="{ 'invisible':[('check', '=',False)]}"/>
							<field name="check" />
							<field name="n_present"  attrs="{ 'invisible':[('check', '=',False)]}"/>
							<field name="working_date"  attrs="{ 'invisible':[('check', '=',False)]}"/>
							<field name="working_years"  attrs="{ 'invisible':[('check', '=',False)]}"/>
							<field name="working_days"  attrs="{ 'invisible':[('check', '=',False)]}"/>
							<field name="fname"  attrs="{ 'invisible':[('check', '=',False)]}"/>
							  <button type="object" string="attendance" name="check_attendance"   attrs="{ 'invisible':[('check', '=',False)]}"></button>
							</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="acton_student_attendance_id">
			<field name="name">student attendance</field>
			<field name="res_model">student.attendance</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		 <menuitem id="student_attendance_id" name="student attendance" parent="student_details_id"
			action="acton_student_attendance_id" />
	</data>
</openerp>